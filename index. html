    <div id="nextStep" style="display:none;">
        <h2>PILIH LOKASI</h2>
        <button onclick="redirectToLocation('WARMINDO TN')">WARMINDO TN</button>
        <button onclick="redirectToLocation('BURJO CAFE BUNGA')">BURJO CAFE BUNGA</button>
